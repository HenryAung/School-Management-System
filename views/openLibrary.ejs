<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>

    <!-- Include the top menu -->
    <%- include('componants/navbar.ejs') %>


<body class="font-sans bg-gray-100">

    <div class="flex">
        
        <!-- Include the side menu -->
        <%- include('componants/sidemenu.ejs') %>

        <!-- Main Content -->
        <main class="flex-1 p-4">
            <div class="container mx-auto p-8">
                <div class="mb-4">
                    <h1 class="text-xl font-bold text-center">Welcome to the Library App</h1>
                </div>
        
                <div class="flex justify-center">
                    <form action="/books" method="get" class="w-full max-w-sm">
                        <div class="flex items-center border-b border-teal-500 py-2">
                            <input class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" type="text" name="search" placeholder="Search for books..." aria-label="Book search">
                            <button class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded" type="submit">
                                Search
                            </button>
                        </div>
                    </form>
                </div>
        
                <div class="mt-8">
                    <% if(books) { %>
                        <% books.forEach(function(book) { %>
                            <div class="bg-white shadow overflow-hidden sm:rounded-lg p-4 mb-4">
                                <h2 class="text-lg font-bold mb-2"><%= book.title %></h2>
                                <p class="text-gray-700">Author: <%= book.author_name ? book.author_name.join(', ') : 'Unknown' %></p>
                            </div>
                        <% }); %>
                    <% } %>
        
                    <% if(error) { %>
                        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
                            <p><%= error %></p>
                        </div>
                    <% } %>
                </div>
            </div>
    </div>
    

  

</body>
</html>
