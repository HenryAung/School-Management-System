    <!-- Include the top menu -->
    <%- include('componants/navbar.ejs' ) %>


<body class="font-sans bg-gray-100">

    <div class="flex">
        
        <!-- Include the side menu -->
        <%- include('componants/sidemenu.ejs') %>

        <!-- Main Content -->
        <main class="flex-1 p-4">
          <header class="text-center py-16 mb-12 bg-white">
            <h1 class="font-bold text-4xl text-gray-800 mb-3">Welcome to Our School Management System</h1>
            <p class="text-gray-600">Managing school activities efficiently and effectively</p>
        </header>
    
        <section class="container mx-auto px-6 md:px-12">
            <div class="text-center mb-12">
